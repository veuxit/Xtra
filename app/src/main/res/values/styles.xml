<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseDarkTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="chatStatus">@color/chatStatusDark</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="materialSwitchStyle">@style/Switch</item>
        <item name="preferenceTheme">@style/prefDark</item>
        <item name="android:navigationBarColor">@color/darkScrim</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseLightTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="chatStatus">@color/chatStatusLight</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="preferenceTheme">@style/prefLight</item>
        <item name="android:navigationBarColor">@color/darkScrim</item>
        <item name="android:statusBarColor">@color/darkScrim</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="BaseAmoledTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorSurface">@color/primaryAmoled</item>
        <item name="android:colorBackground">@color/primaryAmoled</item>
        <item name="chatStatus">@color/chatStatusDark</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="materialSwitchStyle">@style/Switch</item>
        <item name="preferenceTheme">@style/prefDark</item>
        <item name="android:navigationBarColor">@color/darkScrim</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseBlueTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorSurface">@color/primaryBlue</item>
        <item name="android:colorBackground">@color/primaryBlue</item>
        <item name="chatStatus">@color/chatStatusDark</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="materialSwitchStyle">@style/Switch</item>
        <item name="preferenceTheme">@style/prefDark</item>
        <item name="android:navigationBarColor">@color/darkScrim</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseDarkThemeNoCorners" parent="BaseDarkTheme">
        <item name="shapeAppearanceCornerExtraSmall">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerExtraLarge">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.None</item>
    </style>

    <style name="BaseLightThemeNoCorners" parent="BaseLightTheme">
        <item name="shapeAppearanceCornerExtraSmall">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerExtraLarge">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.None</item>
    </style>

    <style name="BaseAmoledThemeNoCorners" parent="BaseAmoledTheme">
        <item name="shapeAppearanceCornerExtraSmall">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerExtraLarge">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.None</item>
    </style>

    <style name="BaseBlueThemeNoCorners" parent="BaseBlueTheme">
        <item name="shapeAppearanceCornerExtraSmall">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceCornerExtraLarge">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.None</item>
    </style>

    <style name="DarkTheme" parent="BaseDarkTheme" />
    <style name="LightTheme" parent="BaseLightTheme" />
    <style name="AmoledTheme" parent="BaseAmoledTheme" />
    <style name="BlueTheme" parent="BaseBlueTheme" />
    <style name="DarkThemeNoCorners" parent="BaseDarkThemeNoCorners" />
    <style name="LightThemeNoCorners" parent="BaseLightThemeNoCorners" />
    <style name="AmoledThemeNoCorners" parent="BaseAmoledThemeNoCorners" />
    <style name="BlueThemeNoCorners" parent="BaseBlueThemeNoCorners" />

    <style name="Thumbnail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H,16:9</item>
    </style>

    <style name="ThumbnailItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="UserPicture">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="ChatView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="ChatMessageBannerOverlay">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Card" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:padding">10dp</item>
    </style>

    <style name="CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:padding">10dp</item>
    </style>

    <style name="Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/SwitchTheme</item>
    </style>

    <style name="SwitchTheme">
        <item name="colorOnPrimary">?attr/colorPrimaryContainer</item>
    </style>

    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <!-- icons -->
        <item name="android:tint">?attr/colorControlNormal</item>
        <!-- SeekBarPreference -->
        <item name="android:progressTint">?attr/colorPrimary</item>
        <item name="android:thumbTint">?attr/colorPrimary</item>

        <item name="switchPreferenceCompatStyle">@style/SwitchPreference</item>
    </style>

    <style name="SwitchPreference" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/material_switch</item>
    </style>

    <style name="prefDark" parent="PreferenceTheme">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="prefLight" parent="PreferenceTheme">
        <item name="android:tint">@android:color/black</item>
    </style>

</resources>
