<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:visibility="gone"
    tools:alpha="1"
    tools:visibility="visible">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@android:color/black" />

    <ImageButton
        android:id="@+id/playPause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_play_arrow_black_48"
        app:tint="@android:color/white" />

    <Button
        android:id="@+id/rewind"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/exo_styled_controls_rewind"
        android:gravity="center|bottom"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/white"
        app:tint="@android:color/white"
        tools:text="10" />

    <Button
        android:id="@+id/fastForward"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/exo_styled_controls_fastforward"
        android:gravity="center|bottom"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/white"
        app:tint="@android:color/white"
        tools:text="10" />

    <LinearLayout
        android:id="@+id/topLeftLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/topRightLayout">

        <ImageButton
            android:id="@+id/minimize"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_expand_more_black_48"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/channel"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:visibility="gone"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:text="channel"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="gone"
                app:autoSizeMaxTextSize="15sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:text="title"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeMinTextSize="6sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:text="game"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topRightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp">

        <ImageButton
            android:id="@+id/download"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_file_download_black_24dp"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/follow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_favorite_border_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/sleepTimer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_alarm_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/aspectRatio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_aspect_ratio_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/speed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/exo_ic_speed"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/quality"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_settings_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_more_vert_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLeftLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/restart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_replay_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/seekLive"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/exo_icon_fastforward"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/vodGames"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_format_list_bulleted_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/volume"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_volume_up_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/audioCompressor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_audio_compressor_off_24dp"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/audioOnly"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_audiotrack_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomRightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/subtitles"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/exo_ic_subtitle_off"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/toggleChatInput"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_keyboard_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/toggleChat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_speaker_notes_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/fullscreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_fullscreen_black_24"
            android:visibility="gone"
            app:tint="@android:color/white"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/streamInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/uptimeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/uptimeIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="4dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_circle_24"
                android:visibility="gone"
                app:tint="@color/liveStreamRed"
                tools:visibility="visible" />

            <Chronometer
                android:id="@+id/uptimeTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewersLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/viewersIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_person_black_24"
                android:visibility="gone"
                app:tint="@android:color/white"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/viewersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:textColor="@android:color/white"
                tools:text="13.3K" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/position"
        android:layout_width="55sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@android:color/white"
        tools:text="12:16" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/duration"
        android:layout_toEndOf="@id/position">

        <androidx.media3.ui.DefaultTimeBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        tools:text="1:12:16" />

</RelativeLayout>